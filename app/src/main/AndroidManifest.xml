<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    package="de.ronnyritscher.weatherapp">


    <!-- wegen "use instant apps" beim erstellen-->
    <dist:module dist:instant="true" />

    <!-- Permissions -->
    <!-- *prüfen ob das Internet verwendet werden darf: -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- *prüfen ob das Netzwerk aktiell erreichbar/verfügbar ist: -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ritscherapplogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ritscherapplogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.ronnyritscher.weatherapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>